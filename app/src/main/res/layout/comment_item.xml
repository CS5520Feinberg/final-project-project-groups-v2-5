<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/comment_profile_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/avatar"
        android:contentDescription="@string/user_profile_image"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:outlineProvider="bounds"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Username -->
    <TextView
        android:id="@+id/comment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textStyle="bold"
        android:textColor="#333"
        app:layout_constraintStart_toEndOf="@id/comment_profile_image"
        app:layout_constraintTop_toTopOf="@id/comment_profile_image" />

    <!-- Time Ago -->
    <TextView
        android:id="@+id/comment_time_ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="0h ago"
        app:layout_constraintStart_toEndOf="@id/comment_username"
        app:layout_constraintTop_toTopOf="@id/comment_username"
        app:layout_constraintBottom_toBottomOf="@id/comment_username" />

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_delete"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/delete_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/comment_time_ago"
        app:layout_constraintBottom_toBottomOf="@id/comment_time_ago" />

    <!-- Comment Content -->
    <TextView
        android:id="@+id/comment_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#555"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="@id/comment_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comment_username" />

</androidx.constraintlayout.widget.ConstraintLayout>
